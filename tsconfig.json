{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": false, // Cambiado a false para evitar errores en proyectos no monorepo
    "declaration": false, // Desactivado para proyectos que no publican bibliotecas
    "emitDeclarationOnly": false // Desactivado para que compile el código normalmente
  },
  "include": ["src"],
  "exclude": [
    "node_modules", // Excluir dependencias externas
    "dist", // Excluir archivos generados
    "**/*.test.ts", // Excluir pruebas unitarias si no son necesarias en compilación
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
