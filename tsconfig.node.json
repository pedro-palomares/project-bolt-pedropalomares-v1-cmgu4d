{
  "compilerOptions": {
    "composite": true, // Necesario para referencias desde tsconfig.json
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"], // Incluye todos los archivos TypeScript
  "exclude": ["node_modules", "dist"] // Excluye directorios irrelevantes
}
